<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CryptoPrice"
             x:Class="CryptoPrice.LivePrice">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="€1,444.44"  x:Name="lblPrice"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" Font="Bold,40" />


        <Label Text="1 BTC To EUR" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

        <Picker x:Name="pckCurrency" Title="Currency" SelectedIndexChanged="btnUpdate_Clicked">
            <Picker.Items>
                <x:String>BTC</x:String>
                <x:String>LTC</x:String>
                <x:String>ETH</x:String>
            </Picker.Items>
            <Picker.SelectedIndex>0</Picker.SelectedIndex>
        </Picker>

        <Button Text="Update" x:Name="btnUpdate"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" Clicked="btnUpdate_Clicked" />
    </StackLayout>

</ContentPage>
